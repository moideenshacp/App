    <script>
        function updateAddress(addressId) {
            const form = document.getElementById('form')

            const name = form.elements['name'].value
            const address = form.elements['address'].value
            const city = form.elements['city'].value
            const state = form.elements['state'].value
            const pincode = form.elements['pincode'].value
            const phone = form.elements['phone'].value
            const email = form.elements['email'].value
            console.log(name,address);


            let datas = {
                name,
                address,
                city,
                state,
                pincode,
                phone,
                email,
                addressId
            }

            console.log(datas);
        if (!name.trim() || !address.trim() || !city.trim() || !pincode.trim() || !state.trim() || !phone.trim() || !email.trim()) {
        Swal.fire({
            icon: 'error',
            title: 'Oops!',
            text: 'All fields are required.',
            confirmButtonText: 'OK'
        });
        return; 
               }
        if (!name.trim() ||!/^[a-zA-Z][a-zA-Z\s]{1,}$/.test(name)) {
        Swal.fire({
            icon: 'error',
            title: 'Oops!',
            text: 'Name is invalid',
            confirmButtonText: 'OK'
        });
        return;
    } if (!city.trim() ||!/^[a-zA-Z][a-zA-Z\s]{1,}$/.test(city)) {
        Swal.fire({
            icon: 'error',
            title: 'Oops!',
            text: 'City is invalid',
            confirmButtonText: 'OK'
        });
        return;
    }
    if (!state.trim() ||!/^[a-zA-Z][a-zA-Z\s]{1,}$/.test(state)) {
        Swal.fire({
            icon: 'error',
            title: 'Oops!',
            text: 'State is invalid',
            confirmButtonText: 'OK'
        });
        return;
    }
    if (!phone.trim() || !/^\d{10}$/.test(phone)) {
        Swal.fire({
            icon: 'error',
            title: 'Oops!',
            text: 'Phone is invalid',
            confirmButtonText: 'OK'
        });
        return;
    }
    if (!pincode.trim() || !/^\d{6}$/.test(pincode)) {
        Swal.fire({
            icon: 'error',
            title: 'Oops!',
            text: 'Pincode is invalid',
            confirmButtonText: 'OK'
        });
        return;
    }   
    if (!email.trim() || !/^[A-Za-z0-9.%+-]+@gmail\.com$/.test(email)) {
        Swal.fire({
            icon: 'error',
            title: 'Oops!',
            text: 'email is invalid',
            confirmButtonText: 'OK'
        });
        return;
    }  

            fetch('/edit-Address', {
                method: 'post',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(datas)
            })
                .then(response => {
                    if (!response.ok) {
                        throw new Error('Network response was not ok');
                    }
                    return response.json();
                })
                .then(data => {
                    if (data.message) {
                        Swal.fire({
                            icon: 'success',
                            title: 'Success!',
                            text: 'Address updated successfully.',
                            confirmButtonText: 'OK'
                        }).then(() => {
                            window.location.href = '/profile'; 
                        });
                    }
                    else {
                        console.log('Error:', data.error);
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                });
        }
    </script>

    
    
