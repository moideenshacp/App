    <script>
        function Addcart(productId, qty) {
            fetch('/cart', {
                method: 'post',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ productId, qty })
            })
                .then(response => {
                    if (!response.ok) {
                        throw new Error('Network response was not ok');
                    }
                    return response.json();
                })
                .then(data => {
                    if (data.message) {
                        Swal.fire({
                            icon: 'success',
                            title: 'Success!',
                            text: 'Product added to cart successfully.',
                            confirmButtonText: 'OK'
                        }).then(() => {
                            window.location.reload();
                        });
                    } else if (data.fail) {
                        Swal.fire({
                            icon: 'error',
                            title: 'Oops...',
                            text: 'Product is already in cart!',
                            confirmButtonText: 'OK'
                        });
                    }
                    else {
                        console.log('Error:', data.error);
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                });
        }

        function Addwishlist(productId) {
    fetch('/wishlist', {
        method: 'post',
        headers: {
            'Content-Type': 'application/json'
        },
        body: JSON.stringify({ productId })
    })
    .then(response => response.json())
    .then(data => {
        const wishlistBtn = document.querySelector(`[data-product-id="${productId}"]`);
        const heartIcon = wishlistBtn.querySelector('svg path');

        if (data.message === 'added') {
            Swal.fire({
                icon: 'success',
                title: 'Success!',
                text: 'Product added to wishlist.',
                confirmButtonText: 'OK'
            });
            wishlistBtn.classList.add('wishlist-active');
            if (heartIcon) heartIcon.setAttribute('fill', 'red'); // Change to red
        } else if (data.message === 'removed') {
            Swal.fire({
                icon: 'info',
                title: 'Removed!',
                text: 'Product removed from wishlist.',
                confirmButtonText: 'OK'
            });
            wishlistBtn.classList.remove('wishlist-active');
            if (heartIcon) heartIcon.setAttribute('fill', 'grey'); // Change to grey
        }
    })
    .catch(error => console.error('Error:', error));
}


