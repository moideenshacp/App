    <script>
        function confirmStatusChange(orderId, productId, action, userId) {
            Swal.fire({
                title: `Are you sure?`,
                text: `You are about to mark this order as ${action}.`,
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, proceed'
            }).then((result) => {
                if (result.isConfirmed) {
                    changeStatus(orderId, productId, action, userId);
                }
            });
        }
    
        function changeStatus(orderId, productId, action, userId) {
            fetch(`/admin/statusChange?orderId=${orderId}&productId=${productId}&action=${action}&userId=${userId}`, {
                method: 'PATCH'
            })
            .then(response => {
                if (response.ok) {
                    Swal.fire(
                        'Success!',
                        `Order marked as ${action}.`,
                        'success'
                    ).then(() => {
                        location.reload();
                    });
                } else {
                    Swal.fire('Error', 'Failed to update order status.', 'error');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                Swal.fire('Error', 'An error occurred while processing the request.', 'error');
            });
        }
    </script>
    
