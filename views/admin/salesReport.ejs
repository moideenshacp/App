<script>
    document.getElementById('download-excel-btn').addEventListener('click', exportToExcel);

    function exportToExcel() {
    // Get the table element
    var table = document.querySelector('.table');

    // Convert the table rows to an array of arrays representing rows and cells
    var rows = Array.from(table.querySelectorAll('tr')).map(row => 
        Array.from(row.querySelectorAll('td, th')).map(cell => cell.innerText)
    );

    // Create a new workbook
    var wb = XLSX.utils.book_new();

    // Add a worksheet with the table data
    var ws = XLSX.utils.aoa_to_sheet(rows);
    XLSX.utils.book_append_sheet(wb, ws, 'Sheet1');

    XLSX.writeFile(wb, 'table_data.xlsx');
}

</script>

<script>
    function sortSales(){
        var selectedValue = document.getElementById("sortby").value;
        console.log(selectedValue);

        fetch('/admin/salesReport', {
                    method: 'post',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ selectedValue: selectedValue}),
                })
                .then(response => {
                    if (!response.ok) {
                        throw new Error('Network response was not ok');
                    }
                    return response.json();
                })
                .then(data => {
                    if(data.message=='success') {
                        displaySalesReport(data.orderlist, data.categoryData,data.totalSalesAmount,data.deliveredProductCount);
                        console.log(data.orderlist);
               
                         console.log('suceess')
                    } else {
                        window.location.reload();
                    };
                })
                .catch(error => {
                    console.error('Error:', error);
                });

    }

    function fetchCustomSales() {
    const dateRangeStart = document.getElementById('startdate').value;
    const dateRangeEnd = document.getElementById('enddate').value;

    if (!dateRangeStart || !dateRangeEnd) {
        alert('Please select both start and end dates.');
        return;
    }

    fetch('/admin/salesReport', {
        method: 'post',
        headers: {
            'Content-Type': 'application/json'
        },
        body: JSON.stringify({ selectedValue: 'custom', dateRangeStart, dateRangeEnd }),
    })
    .then(response => {
        if (!response.ok) {
            throw new Error('Network response was not ok');
        }
        return response.json();
    })
    .then(data => {
        if (data.message == 'success') {
            displaySalesReport(data.orderlist, data.categoryData);
            console.log(data.orderlist);
            console.log('success');
        } else {
            window.location.reload();
        }
    })
    .catch(error => {
        console.error('Error:', error);
    });
}


    function displaySalesReport(orderlist, categoryData, totalSalesAmount, deliveredProductCount) {
    const tbody = document.querySelector('.table tbody');
    const totalAmountElement = document.getElementById('total-salesamount');
    const deliveredCountElement = document.getElementById('delivered-count');

    tbody.innerHTML = '';  // Clear the table body before appending new rows

    orderlist.forEach(order => {
        order.products.forEach(product => {
            if (product.status === 'delivered'||product.status === 'Return Denied') {
                const row = document.createElement('tr');
                row.innerHTML = `
                    <td>#${order._id}</td>
                    <td>${new Date(order.date).toLocaleDateString()}</td>
                    <td>${order.user.name}</td>
                    <td><b>${product.product.name}</b></td>
                    <td>${product.product.price}</td>
                    <td>${product.quantity}</td>
                    <td><span class="badge rounded-pill alert-warning">${product.status}</span></td>
                    <td>₹${product.quantity * product.product.price}</td>
                `;
                tbody.appendChild(row);
            }
        });
    });

    if (totalAmountElement) {
        totalAmountElement.textContent = `₹${totalSalesAmount}`;
    } else {
        console.error('Total amount element not found.');
    }

    if (deliveredCountElement) {
        deliveredCountElement.textContent = deliveredProductCount;
    } else {
        console.error('Delivered count element not found.');
    }
}


